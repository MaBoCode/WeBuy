<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme.AuthLinearLayout"
    >

    <LinearLayout
        style="@style/AppTheme.TextInputLinearLayout"
        >
        <!-- Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme.TextInputLayout"
            >
            <EditText
                android:id="@+id/name_edit_text"
                style="@style/AppTheme.EditText"
                android:inputType="textPersonName"
                android:hint="@string/name_label_info"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme.TextInputLayout"
            >
            <EditText
                android:id="@+id/email_edit_text"
                style="@style/AppTheme.EditText"
                android:inputType="textEmailAddress"
                android:hint="@string/email_label_info"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme.TextInputLayout"
            app:passwordToggleEnabled="true"
            >
            <EditText
                android:id="@+id/password_edit_text"
                style="@style/AppTheme.EditText"
                android:inputType="textPassword"
                android:hint="@string/password_label_info"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Submit Button -->
    <include layout="@layout/button"
        style="@style/Button.Light"
        android:id="@+id/signup_submit_button"
        />

</LinearLayout>